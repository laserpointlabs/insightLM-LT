{
  "name": "insightlm-lt",
  "version": "1.0.0",
  "description": "Lightweight desktop application for workbook management and AI chat",
  "main": "dist-electron/main.js",
  "scripts": {
    "clean": "kill-port 5173 5174 5175 5176 5177 5178 5179 5180",
    "predev": "npm run clean || echo \"No ports to clean\"",
    "kill-python": "powershell -Command \"Get-Process | Where-Object {$_.Path -like '*insightLM-LT\\mcp-servers*'} | Stop-Process -Force\" || echo \"No MCP processes to kill\"",
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:clean": "node scripts/dev-clean.mjs",
    "dev:electron": "node scripts/run-electron.mjs --config app.dev.yaml",
    "dev:react": "vite",
    "smoke:clean": "node scripts/reset-data.mjs --config app.smoke.yaml",
    "smoke:run": "node scripts/smoke-run.mjs",
    "build": "npm run build:electron && npm run build:react",
    "package": "npm run build && electron-builder",
    "build:electron": "tsc -p electron",
    "build:react": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:workbooks": "node tests/test-workbook-crud-operations.mjs",
    "test:rag": "cd mcp-servers/workbook-rag && python tests/test_content_search_simple.py",
    "test:integration": "node tests/test-rag-standalone.mjs",
    "test:decoupling": "node tests/test-decoupling-all.mjs",
    "test:decoupling:phase1": "node tests/test-mcp-tool-discovery.mjs",
    "test:decoupling:phase2": "node tests/test-phase2-decoupling.mjs",
    "test:decoupling:phase3": "node tests/test-phase3-provider-abstraction.mjs",
    "test:decoupling:phase4": "node tests/test-phase4-dashboard-decoupling.mjs",
    "test:automation:smoke": "node tests/automation-smoke-ui.mjs",
    "test:automation:prod": "node tests/run-prod-renderer-smoke.mjs",
    "test:rag:delete": "node tests/test-rag-delete-no-legacy.mjs",
    "test:jupyter:path": "node tests/test-jupyter-server-workbook-url-path.mjs"
  },
  "keywords": [
    "electron",
    "desktop",
    "workbook",
    "ai"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.6",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "kill-port": "^2.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^4.0.15",
    "ws": "^8.18.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.16",
    "chokidar": "^3.5.3",
    "docx": "^9.5.1",
    "electron-updater": "^6.6.2",
    "js-yaml": "^4.1.0",
    "luckysheet": "^2.1.13",
    "mammoth": "^1.11.0",
    "mermaid": "^11.12.1",
    "papaparse": "^5.4.1",
    "pdf-parse": "^1.1.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.1.0",
    "react-pdf": "^7.6.0",
    "recharts": "^2.15.4",
    "remark-gfm": "^4.0.1",
    "remark-mermaid": "^0.2.0",
    "tailwindcss": "^3.4.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.7"
  }
}
