{
  "name": "insightlm-lt",
  "version": "1.0.0",
  "description": "Lightweight desktop application for workbook management and AI chat",
  "main": "dist-electron/main.js",
  "scripts": {
    "clean": "kill-port 5173 5174 5175 5176 5177 5178 5179 5180",
    "predev": "npm run clean || echo \"No ports to clean\"",
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:electron": "tsc -p electron && electron .",
    "dev:react": "vite",
    "build": "tsc -p electron && vite build && electron-builder",
    "build:electron": "tsc -p electron",
    "build:react": "vite build",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "desktop",
    "workbook",
    "ai"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.6",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "kill-port": "^2.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.16",
    "chokidar": "^3.5.3",
    "electron-updater": "^6.6.2",
    "js-yaml": "^4.1.0",
    "mermaid": "^11.12.1",
    "papaparse": "^5.4.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-pdf": "^7.6.0",
    "remark-gfm": "^4.0.1",
    "remark-mermaid": "^0.2.0",
    "tailwindcss": "^3.4.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.7"
  }
}
